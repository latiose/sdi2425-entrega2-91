{% extends "layout.twig" %}

{% block title %} Registrar usuario {% endblock %}

{% block main_container %}
  <h2>Registrar usuario</h2>
  <form class="form-horizontal" method="post" action="/users/signup" >
    <div class="form-group">
      <label class="control-label col-sm-2" for="dni">Dni:</label>
      <div class="col-sm-10">
        <input id="dni" type="text" class="form-control" name="dni"
               placeholder="12345678Q"   />
        {% if errors and errors.dni %}
          <span class="text-danger">{{ errors.dni }}</span>
        {% endif %}
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="name">Nombre:</label>
      <div class="col-sm-10">
        <input id="name" type="text" class="form-control" name="name"
               placeholder="Nombre del empleado"   />
        {% if errors and errors.name %}
          <span class="text-danger">{{ errors.name }}</span>
        {% endif %}
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="lastName">Apellidos:</label>
      <div class="col-sm-10">
        <input id="lastName" type="text" class="form-control" name="lastName"
               placeholder="Apellido del empleado"  />
        {% if errors and errors.lastName %}
          <span class="text-danger">{{ errors.lastName }}</span>
        {% endif %}
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-primary">Registrar</button>
      </div>
    </div>
  </form>
{% endblock %}