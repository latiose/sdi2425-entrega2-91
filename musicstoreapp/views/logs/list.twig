{% extends "layout.twig" %}

{% block title %} Lista de Logs {% endblock %}

{% block main_container %}
    <div class="container" id="main-container">
        <h2>Registros de logs</h2>

        <div class="row">
            <div class="col-md-6">
                <form method="get" action="/logs/list" class="form-inline">
                    <div class="form-group">
                        <label for="type">Filtrar por tipo:</label>
                        <select id="type" name="type" class="form-control ml-2">
                            <option value="all" {% if selectedType == "all" %}selected{% endif %}>Todos</option>
                            {% for type in logTypes %}
                                <option value="{{ type }}" {% if selectedType == type %}selected{% endif %}>{{ type }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary ml-2">Filtrar</button>
                </form>
            </div>

            {% if selectedType and selectedType != "all" %}
                <div class="col-md-6 text-right">
                    <form method="post" action="/logs/delete" onsubmit="return confirm('¿Estás seguro de querer eliminar todos los logs de tipo {{ selectedType }}?');">
                        <input type="hidden" name="type" value="{{ selectedType }}">
                        <button type="submit" class="btn btn-danger">Eliminar logs de tipo "{{ selectedType }}"</button>
                    </form>
                </div>
            {% endif %}
        </div>

        <div class="table-responsive mt-4">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>Tipo</th>
                    <th>Fecha y Hora</th>
                    <th>Descripción</th>
                </tr>
                </thead>
                <tbody>
                {% if logs.length > 0 %}
                    {% for log in logs %}
                        <tr>
                            <td>{{ log.type }}</td>
                            <td>{{ log.timestamp | date('d/m/Y H:i:s') }}</td>
                            <td>{{ log.description }}</td>
                        </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="3" class="text-center">No se encontraron registros de logs</td>
                    </tr>
                {% endif %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}