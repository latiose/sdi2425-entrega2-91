
    {% extends "layout.twig" %}
    {% block title %} Autores {% endblock %}
    {% block main_container %}
    <!-- Búsqueda -->
    <div class="row">
        <div id="custom-search-input ">
            <form method="get" action="/authors/filter/">
                <div class="input-group col-xs-8 col-sm-6 col-md-4 col-lg-5 pull-right">
                    <input id="role" type="text" class="search-query form-control"
                           placeholder="Rol del autor" name="role"/>
                    <span class="input-group-btn">
        <button class="btn" type="submit">
         <span class="glyphicon glyphicon-search"></span>
        </button>
        </span>
                </div>
            </form>
        </div>
        <h2>Autores</h2>
    <div class="row">

        <!-- http://librosweb.es/libro/bootstrap_3/capitulo_2/tipos_de_rejillas.html -->
        <!-- Inicio del Bloque canción  -->
        {% for author in authors %}
        <div class="col-xs-6 col-sm-6 col-md-4 col-lg-3">
            <div style="width:200px">
                <a href="/authors/">
                    <img src="/images/user.png" alt="logo"/>
                    <div>{{ author.name }} </div>
                    <div class="small">{{ author.group }} </div>
                    <div class="small"> {{ author.role }} </div>
                </a>
            </div>
        </div>
        {% endfor %}
    </div>

    <!-- Paginación mostrar la actual y 2 anteriores y dos siguientes -->
    <div class="row text-center">
        <ul class="pagination">
            <li class="page-item"><a class="page-link" href="#">Anterior</a></li>
            <li class="page-item active"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item"><a class="page-link" href="#">4</a></li>
            <li class="page-item"><a class="page-link" href="#">5</a></li>
            <li class="page-item"><a class="page-link" href="#">Siguiente</a></li>
        </ul>
    </div>
    {% endblock %}
</div>

</body>
</html>
