{% extends "layout.twig" %}
{% block title %} Empleados {% endblock %}

{% block main_container %}
    <div class="container" id="main-container">
        <h2>Editar empleados</h2>
        <form class="form-horizontal" method="post" action="/employee/edit/{{ employee._id }}">
            <div class="form-group">
                <label class="control-label col-sm-2" for="dni">Dni:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="dni" name="dni" value="{{ employee.dni }}">
                    {% if errors and errors.dni %}
                        <span class="text-danger">{{ errors.dni }}</span>
                    {% endif %}
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="name">Nombre: </label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="name" name="name" value="{{ employee.name }}">
                    {% if errors and errors.name %}
                        <span class="text-danger">{{ errors.name }}</span>
                    {% endif %}
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="lastName">Apellidos:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="lastName" name="lastName" value="{{ employee.lastName }}">
                    {% if errors and errors.lastName %}
                        <span class="text-danger">{{ errors.lastName }}</span>
                    {% endif %}
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="role">Rol:</label>
                <div class="col-sm-10">
                    <select name="role" id="role" class="form-control">
                        <option value="EMPLOYEE" {% if employee.role == 'ROLE_STANDARD' %}selected{% endif %}>EMPLEADO</option>
                        <option value="ADMIN" {% if employee.role == 'ROLE_ADMIN' %}selected{% endif %}>ADMINISTRADOR</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">Modificar</button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}