{% extends "layout.twig" %}
{% block title %} Añadir trayecto {% endblock %}

{% block main_container %}
    <h2>Añadir nuevo trayecto</h2>

    {% if errors %}
        <div class="alert alert-danger">
            {% if errors.odometer %}<p>{{ errors.odometer }}</p>{% endif %}
            {% if errors.existingVehicle %}<p>{{ errors.existingVehicle }}</p>{% endif %}
            {% if errors.vehicleInUse %}<p>{{ errors.vehicleInUse }}</p>{% endif %}
            {% if errors.employee %}<p>{{ errors.employee }}</p>{% endif %}
            {% if errors.error %}<p>{{ errors.error }}</p>{% endif %}
        </div>
    {% endif %}

    <form class="form-horizontal" method="post" action="/journeys/add">
        <div class="form-group">
            <label class="control-label col-sm-2" for="numberPlate">Seleccione vehículo:</label>
            <div class="col-sm-10">
                <select class="form-control" id="numberPlate" name="numberPlate" required>
                    <option value="">-- Seleccione una matrícula --</option>
                    {% for vehicle in vehicles %}
                        <option value="{{ vehicle.numberPlate }}">{{ vehicle.numberPlate }} - {{ vehicle.brand }} {{ vehicle.model }}</option>
                    {% endfor %}
                </select>
                {% if errors.numberPlate %}
                    <div class="text-danger">{{ errors.numberPlate }}</div>
                {% endif %}
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Iniciar trayecto</button>
            </div>
        </div>
    </form>
{% endblock %}